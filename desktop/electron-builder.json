{
  "appId": "com.ahm4dd.manverse",
  "productName": "ManVerse",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.cjs",
    "preload.cjs",
    "package.json",
    "node_modules/**",
    "assets/**"
  ],
  "icon": "assets/icon.png",
  "win": {
    "icon": "assets/icon.ico",
    "target": [
      "nsis"
    ]
  },
  "linux": {
    "icon": "assets/icon.png",
    "target": [
      "AppImage"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "ahm4dd",
      "repo": "ManVerse"
    }
  ],
  "extraResources": [
    {
      "from": "../desktop/bundled-bun",
      "to": "bun"
    },
    {
      "from": "runtime/node_modules",
      "to": "api/node_modules"
    },
    {
      "from": "runtime/app/dist",
      "to": "app/dist"
    },
    {
      "from": "runtime/api",
      "to": "api"
    },
    {
      "from": "runtime/shared",
      "to": "shared"
    }
  ]
}
