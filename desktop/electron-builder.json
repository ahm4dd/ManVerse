{
  "appId": "com.ahm4dd.manverse",
  "productName": "ManVerse",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.cjs",
    "preload.cjs",
    "package.json",
    "node_modules/**"
  ],
  "win": {
    "target": [
      "nsis"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "ahm4dd",
      "repo": "ManVerse"
    }
  ],
  "extraResources": [
    {
      "from": "../app/dist",
      "to": "app/dist"
    },
    {
      "from": "../api",
      "to": "api"
    },
    {
      "from": "../packages",
      "to": "packages"
    },
    {
      "from": "../shared",
      "to": "shared"
    }
  ]
}
