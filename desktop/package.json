{
  "name": "manverse-desktop",
  "version": "1.1.1",
  "private": true,
  "type": "commonjs",
  "main": "main.cjs",
  "scripts": {
    "dev": "MANVERSE_DEV=true bun launch.cjs",
    "start": "bun launch.cjs",
