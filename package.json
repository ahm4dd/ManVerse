{
  "name": "manverse",
  "version": "1.0.1",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "app",
    "api",
    "desktop",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n API,APP -c blue,magenta \"bun run dev:api\" \"bun run dev:app\"",
    "dev:app": "bun run --cwd app dev",
    "dev:api": "bun run --cwd api dev",
    "dev:desktop": "bun run --cwd desktop dev",
    "build:desktop": "bun run --cwd desktop build",
    "setup": "bun ./scripts/bootstrap.ts",
    "postinstall": "bun ./scripts/bootstrap.ts",
    "version:sync": "bun ./scripts/version.ts"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
